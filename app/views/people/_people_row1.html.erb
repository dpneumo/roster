<% present(item) do |item| %>
  <tr class='<%= background %> mx-0' >
    <td class='relative py-1.5 pl-4 sm:pl-3 pr-3 text-sm text-gray-900 font-medium whitespace-nowrap'>
      <%= link_to item.sortable_name, 
                  person_detail_path(item), 
                  class: "text-sm font-medium hover:font-extrabold underline" %>
      <div class="absolute bottom-0 right-full h-px w-screen bg-gray-100"></div>
      <div class="absolute bottom-0 left-0 h-px w-screen bg-gray-100"></div>
    </td>
    <td class='hidden lg:table-cell py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.nickname %></td>
    <td class='relative sm:table-cell py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.house_address %></td>
    <td class='hidden lg:table-cell py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.status %></td>
    <td class='hidden lg:table-cell py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.note_hint %></td>
</tr>
<% end %>
