<% present(item) do |item| %>
  <tr class='<%= background %>' >
    <td class='col-3'><%= item.address %></td>
    <td class='col-2'><%= item.address_type %></td>
    <td class='col-1'><%= item.primary %></td>
    <td class='col-3'><%= item.note_hint %></td>
    <td class='col-1'><%= link_to 'Show', item %></td>
    <td class='col-1'><%= link_to 'Edit', edit_address_path(item) %></td>
    <td class='col-1'><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>