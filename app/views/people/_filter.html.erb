<div class="flex items-center justify-center">
  <div class="w-3/4 bg-white rounded-lg">
    <h2 class="text-lg font-medium mb-4">Filter for Persons</h2>

    <%= search_form_for @q do |f| %>
      <div class="mb-4 mx-4">
        <%= render 'shared/search/field', f: f, label: 'Last Name: ', field_matcher: :last_eq, width: 'w-full' %>
      </div>

      <div class="flex flex-row sm:flex-col md:flex-row mb-4 mx-4 md:space-x-4">
        <%= render 'shared/search/field', f: f,  label: 'Nickname: ', field_matcher: :nickname_eq, width: 'w-11/12' %>
        <%= render 'shared/search/select', f: f, label: 'Status: ',   field_matcher: :status_eq, collection: Person.statuses, width: 'w-auto' %>
      </div>

      <div class="mb-4 mx-4">
        <%= render "shared/search/submit_or_cancel", f: f %>
      </div>
    <% end %>
  </div>
</div>
