<% present(@person) do |person| %>
  <div class="flex flex-col items-center justify-center h-full">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h1 class="text-2xl font-bold mb-4"><%= person.formal_name %></h1>
      <p class="text-gray-700 text-base mb-4"><%= person.nickname %></p>
      <p class="text-gray-700 text-base mb-4"><%= person.house_address %></p>
      <p class="text-gray-700 text-base mb-4"><%= person.status %></p>

      <%= render "shared/table", 
          head: 'people/subtables/email_head', 
          item_row: 'people/subtables/email_row', 
          collection: person.emails       %>

      <%= render "shared/table", 
          head: 'people/subtables/phone_head', 
          item_row: 'people/subtables/phone_row', 
          collection: person.phones       %>

      <%= render "shared/table", 
          head: 'people/subtables/address_head', 
          item_row: 'people/subtables/address_row', 
          collection: person.addresses    %>

      <a href="<%= edit_person_path(person) %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Edit</a>
      <%= link_to 'Back', people_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
    </div>
  </div>
<% end %>