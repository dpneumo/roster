<section id="filter_people">
  <%= search_form_for @q, class: "mx-auto p-4 " do |f| %>
    <div class="grid-rows-4">

      <div class='row-start-1 mt-2'>
        <h2 class="text-2xl font-medium mr-4">
          Filter:
        </h2>
      </div>

      <%= render 'shared/search/field', f: f, label: 'Last Name: ', field_matcher: :last_i_cont %>

      <%= render 'shared/search/checkbox', f: f, label: 'House is Blank: ', field_matcher: :house_id_blank %>

      <%= render "shared/search/filter_cancel", f: f %>

    </div>
  <% end %>
</section>
