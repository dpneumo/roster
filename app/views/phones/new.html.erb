    <div class="max-w-4xl mb-5">
      <h1 class="text-2xl font-extrabold">New Phone</h1>

      <%= render 'shared/form', mdl: @phone %>

      <hr class="border-1 border-gray-700" />

      <% if @phone.person_id %>
        <%= link_to 'Person Detail', person_detail_path(@phone.person_id), class: "text-lg underline hover:text-red-600" %> |
      <% end %>
      <%= link_to 'Phones List', phones_path, class: "text-lg underline hover:text-red-600" %>
    </div>
