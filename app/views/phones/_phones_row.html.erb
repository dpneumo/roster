<% present(item) do |item| %>
  <tr class='<%= background %>' >
    <td class='py-1.5 pl-4 sm:pl-3 pr-3 text-sm text-gray-900 font-medium whitespace-nowrap'><%= item.person.fullname %></td>
    <td class='py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.ph_number %></td>
    <td class='py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap hidden sm:table-cell'><%= item.phone_type %></td>
    <td class='py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap hidden sm:table-cell'><%= item.primary %></td>
    <td class='py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap hidden lg:table-cell'><%= item.textable %></td>
    <td class='py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap hidden md:table-cell'><%= item.note_hint %></td>
    <td class='py-1.5 px-3'><%= link_to 'Detail', phone_path(item.id), class: "text-sm font-medium underline hover:text-red-600" %></td>
  </tr>
<% end %>
