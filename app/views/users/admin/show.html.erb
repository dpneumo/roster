<% present(@user) do |user| %>
<div class="flex flex-col items-center justify-center">

  <div class='grid grid-rows-auto'>
    <div class='row-start-1 max-h-fit'>

      <div class='grid auto-rows-min grid-rows-auto'>
        <header class='row-start-1'>
          <h1 class="mb-2 text-2xl font-sans font-bold">User Detail</h1>
        </header>

        <%= user.notice(notice) %>

        <div class='row-start-2 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.email, label: 'email'
          %>
        </div>

        <div class='row-start-3 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.first_name, label: 'First Name'
          %>
        </div>

        <div class='row-start-4 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.last_name, label: 'Last Name'
          %>
        </div>

        <div class='row-start-5 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.role, label: 'Role'
          %>
        </div>

        <div class='row-start-6 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.approved, label: 'Approved'
          %>
        </div>

        <div class='row-start-7 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.sign_in_count, label: 'Sign In Count'
          %>
        </div>

        <div class='row-start-8 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.current_sign_in_at, label: 'Current Sign In'
          %>
        </div>

        <div class='row-start-9 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.current_sign_in_ip, label: 'Current IP'
          %>
        </div>

        <div class='row-start-10 h-fit mb-3'>
          <%= render "shared/show/address",
            attribute: user.created_at, label: 'Created At'
          %>
        </div>
      </div>
    </div>

    <div class='row-start-2 h-fit my-3'>
      <%= render "shared/show/edit_btn", path: edit_user_path(user) %>
      <%= render "shared/show/back_btn", path: users_path %>
      <%= render "shared/show/delete_btn", path: user_path(user) %>
    </div>
  </div>

</div>
<% end %>
