<% present(@house) do |house| %>
  <div class="flex flex-col items-center justify-center h-full">
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
      <h1 class="text-2xl font-bold mb-4"><%= house.house_address %></h1>

      <div class="flex flex-row">
        <p class="text-gray-700 text-base mb-4 mx-2">Status: <%= house.status %></p>
        <p class="text-gray-700 text-base mb-4 mx-2">Flag Group: <%= house.gets_flag %></p>
      </div>

      <div class="flex flex-row">
        <p class="text-gray-700 text-base mb-4 mx-2">Rental Property: <%= house.is_rented %></p>
        <p class="text-gray-700 text-base mb-4 mx-2">Listed For Sale: <%= house.is_listed %></p>
      </div>

      <div class="flex flex-row">
        <p class="text-gray-700 text-base mb-4 mx-2">Latitude: <%= house.lat %></p>
        <p class="text-gray-700 text-base mb-4 mx-2">Longitude: <%= house.lng %></p>
      </div>

      <div>
        <p class="text-gray-700 text-base mb-4 mx-2">Image Link: <%= house.image_link %></p>
        <p class="text-gray-700 text-base mb-4 mx-2">Note: <%= house.note %></p>
      </div>

      <%= render "shared/table",
            head: 'houses/owner/head', 
            item_row: 'houses/owner/row', 
            collection: house.owners %>

      <%= render "shared/table",
            head: 'houses/occupants/head', 
            item_row: 'houses/occupants/row', 
            collection: house.occupants %>

      <%= render "shared/table",
            head: 'houses/contrib/head', 
            item_row: 'houses/contrib/row', 
            collection: house.yearly_contributions_for_house %>

      <a href="<%= edit_house_path(@house) %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Edit</a>
      <%= link_to 'Back', houses_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>

    </div>
  </div>
<% end %>
