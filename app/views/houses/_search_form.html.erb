<section id="filter_houses">
  <%= search_form_for @q, class: "max-w-4xl mx-auto p-4 flex justify-between items-center" do |f| %>
    <h2 class="text-3xl font-medium mr-4">
      Filter:
    </h2>

    <div class=''>
      <%= f.label :number, 'Number: ' %>
      <%= f.search_field :number_eq, class: "block appearance-none bg-white border border-gray-400 hover:border-gray-500 w-fit py-2 px-3 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
    </div>

    <%= render 'shared/dropdown_select_1', fldname: 'street_eq', select_label: 'Street', items: house.street_names.unshift('') %>

    <%= render 'shared/dropdown_select_1', fldname: 'status_eq', select_label: 'Status', items: house.statuses.unshift('') %>

    <%= render 'shared/dropdown_select_1', fldname: 'flag', select_label: 'Flag', items: ['All', 'Yes', 'No'] %>

    <%= render 'shared/dropdown_select_1', fldname: 'rental', select_label: 'Rental', items: ['All', 'Yes', 'No'] %>

    <%= render 'shared/dropdown_select_1', fldname: 'listed', select_label: 'Listed', items: ['All', 'Yes', 'No'] %>

    <button class="bg-teal-500 hover:bg-teal-300">
      <%= f.submit 'Search', class: "w-full text-center ml-3 pt-4 pb-5 rounded bg-indigo-400 text-white hover:bg-green-600 focus:outline-none" %>
    </button>

  <% end %>
</section>
