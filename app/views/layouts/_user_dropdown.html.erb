  <button class="bg-teal-500 group-hover:bg-teal-300 text-white px-2 text-base border-0">
  	<%= User.find(current_user.id).std_name if current_user %>
  </button>
  <div class="hidden group-hover:block absolute bg-gray-300 min-w-fit z-10">
		<%= link_to "Log out", destroy_user_session_path, 
