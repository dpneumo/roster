<% present(@ownership) do |ownership| %>
<div class="flex flex-col items-center justify-center">

  <div class='grid grid-rows-auto'>
    <div class='row-start-1 max-h-fit'>

      <div class='grid auto-rows-min grid-rows-auto'>
        <header class='row-start-1'>
          <h1 class="mb-2 text-2xl font-sans font-bold">Ownership Detail</h1>
        </header>

        <div class='row-start-2 h-fit mb-3'>
          <%= render "shared/show/attrib_wide",
            attribute: ownership.owner_name, label: 'Owner'
          %>
        </div>

        <div class='row-start-3 h-fit mb-3'>
          <%= render "shared/show/attrib_wide",
            attribute: ownership.house_address, label: 'House'
          %>
        </div>
      </div>
    </div>

    <div class='row-start-2 h-fit my-3'>
      <%= render "shared/show/edit_btn", path: edit_ownership_path(ownership) %>
      <%= render "shared/show/back_btn", path: ownerships_path %>
    </div>
  </div>

</div>
<% end %>
