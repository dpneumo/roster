<% present(@position) do |position| %>
<div class="flex flex-col items-center justify-center">

  <div class='grid grid-rows-auto'>
    <div class='row-start-1 max-h-fit'>

      <div class='grid auto-rows-min grid-rows-auto'>
        <header class='row-start-1'>
          <h1 class="mb-2 text-2xl font-sans font-bold">Position Detail</h1>
        </header>

        <div class='row-start-2 h-fit mb-3'>
          <%= render "shared/show/attrib",
            attributes: [
              {attribute: position.name, label: 'Name'},
            ]
          %>
        </div>

        <div class='row-start-3 h-fit mb-3'>
          <%= render "shared/show/attrib_wide",
            attribute: position.person_name, label: 'Person'
          %>
        </div>

        <div class='row-start-4 h-fit mb-3'>
          <%= render "shared/show/attrib",
            attributes: [
              {attribute: position.start, label: 'Start Date'},
              {attribute: position.stop, label: 'Stop Date'},
            ]
          %>
        </div>
      </div>
    <div class='row-start-4 h-fit my-3'>
      <%= render "shared/show/edit_btn", path: edit_position_path(position) %>
      <%= render "shared/show/back_btn", path: positions_path %>
    </div>
  </div>

</div>
<% end %>
