<% present(item) do |item| %>
  <tr class='<%= background %>' >
    <td class='py-1.5 pl-4 sm:pl-3 pr-3 text-sm text-gray-900 font-medium whitespace-nowrap'><%= item.name %></td>
    <td class='py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.person_name %></td>
    <td class='hidden md:table-cell py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap '><%= item.date_range %></td>
    <td class='py-1.5 px-3'><%= link_to 'Detail', position_path(item.id), class: "text-sm font-medium underline hover:text-red-600" %></td>
  </tr>
<% end %>
