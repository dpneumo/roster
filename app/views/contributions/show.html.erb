<% present(@contribution) do |contribution| %>
<div class="flex flex-col items-center justify-center">

  <div class='grid grid-rows-auto'>
    <div class='row-start-1 max-h-fit'>

      <div class='grid auto-rows-min grid-rows-auto'>
        <header class='row-start-1'>
          <h1 class="mb-2 text-2xl font-sans font-bold">Contribution Detail</h1>
        </header>

        <div class='row-start-2 h-fit mb-3'>
          <%= render "shared/show/attrib_wide",
            attribute: contribution.house_address, label: 'House'
          %>
        </div>

        <div class='row-start-3 h-fit mb-3'>
          <%= render "shared/show/attrib",
            attributes: [
              {attribute: contribution.date_paid, label: 'Date Paid'},
              {attribute: contribution.amount, label: 'Amount'},
            ]
          %>
        </div>
      </div>
    </div>

    <div class='row-start-2 h-fit my-3'>
      <%= render "shared/show/edit_btn", path: edit_contribution_path(contribution) %>
      <%= render "shared/show/house_btn", path: house_detail_path(contribution.house_id) %>
      <%= render "shared/show/back_btn", path: contributions_path %>
    </div>
  </div>

</div>
<% end %>
