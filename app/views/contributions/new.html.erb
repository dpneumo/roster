<div class="grid grid-cols-1 sm:grid-cols-6 mt-2 gap-x-6 gap-y-2">
  <div class="col-start-1 col-end-6 sm:col-start-2">

    <h1 class="text-2xl font-extrabold">New Contribution</h1>

    <%= render 'shared/form', mdl: @contribution %>

    <hr class="border-1 border-gray-700 cursor-pointer hover:border-red-500" />

    <% if @contribution.house_id %>
      <%= link_to 'House Detail', house_detail_path(@contribution.house_id) %> |
    <% end %>
    <%= link_to 'Contributions List', contributions_path, class: "text-lg" %>

  </div>
</div>