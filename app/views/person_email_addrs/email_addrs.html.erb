<% present(@person) do |person| %>
<div class='flex flex-col sm:flex-row items-center justify-center'>
  <div class='mb-5 mx-2'>
    <div class="flex flex-row justify-between">
      <h1 class="font-sans font-bold text-2xl"><%= person.fullname %></h1>
    </div>

    <div class="flex flex-row justify-between">
      <h1 class="font-sans font-bold text-2xl">Email Addresses</h1>
    </div>

    <%= render "shared/table",
            head: 'head',
            item_row:  'row',
            collection: @email_addrs
    %>

    <hr class="mt-1 border-1 border-gray-700" />
    <br>

    <div class="flex flex-row justify-between">
      <%= render 'shared/new_edit/link_btn', label: 'Person', path: person_path(@person), color: 'gray' %>
      <%= render 'shared/new_edit/link_btn', label: 'New Email', path: new_email_path(@person), color: 'red' %>
    </div>
  </div>
</div>
<% end %>