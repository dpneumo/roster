<% present(item) do |item| %>
  <tr class='<%= background %>' >
    <td class='relative py-1.5 pl-4 sm:pl-3 pr-3 text-sm text-gray-900 font-medium whitespace-nowrap'>
      <%= item.addressee %>
      <div class="absolute bottom-0 right-full h-px w-screen bg-gray-100"></div>
      <div class="absolute bottom-0 left-0 h-px w-screen bg-gray-100"></div>    
    </td>
    <td class='py-1.5 px-3 text-sm text-gray-900 whitespace-nowrap'><%= item.complete_address %></td>
    <td class='hidden lg:table-cell py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.address_type %></td>
    <td class='hidden lg:table-cell py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.primary %></td>
    <td class='hidden lg:table-cell py-1.5 px-3 text-sm text-gray-500 whitespace-nowrap'><%= item.note_hint %></td>
    <td><%= link_to 'Detail', address_path(item) %></td>
  </tr>
<% end %>