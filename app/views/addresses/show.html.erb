<% present(@address) do |address| %>
<div class="flex flex-col items-center justify-center">

  <div class='grid grid-rows-auto'>
    <div class='row-start-1 max-h-fit'>

      <div class='grid auto-rows-min grid-rows-auto'>
        <header class='row-start-1'>
          <h1 class="mb-2 text-2xl font-sans font-bold">Address Detail</h1>
        </header>

        <div class='row-start-2 h-fit mb-3'>
          <%= render "shared/show/attrib_wide",
            attribute: address.addressee, label: 'Person'
          %>
        </div>

        <div class='row-start-3 h-fit mb-3'>
          <%= render "shared/show/attrib_wide",
            attribute: address.complete_address, label: 'Address'
          %>
        </div>

        <div class='row-start-4 h-fit mb-3'>
          <%= render "shared/show/attrib",
            attributes: [
              {attribute: address.address_type, label: 'Type'},
              {attribute: address.primary, label: 'Preferred'},
            ]
          %>
        </div>

        <div class='row-start-5 h-fit mb-3'>
          <%= render "shared/show/note",
            attribute: address.note, label: 'Note'
          %>
        </div>
      </div>
    </div>

    <div class='row-start-4 h-fit my-3'>
      <%= render "shared/show/edit_btn", path: edit_address_path(address) %>
      <%= render "shared/show/back_btn", path: addresses_path %>
    </div>
  </div>

</div>
<% end %>
