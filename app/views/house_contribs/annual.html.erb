<% present(@house) do |house| %>
<div class='flex flex-col sm:flex-row items-center justify-center'>
  <div class='mb-5 mx-2'>
    <div class="flex flex-row justify-between">
      <h1 class="font-sans font-bold text-2xl"><%= house.addr(house) %></h1>
    </div>

    <div class="flex flex-row justify-between">
      <h1 class="font-sans font-bold text-2xl">Annual Contributions</h1>
    </div>

    <%= render "shared/table",
            head: 'head',
            item_row:  'row',
            collection: @contribs
    %>

    <hr class="mt-1 border-1 border-gray-700" />
    <br>

    <%= link_to 'House', house_path(@house), class: "text-lg font-sans font-medium link-hover" %>
  </div>
</div>
<% end %>