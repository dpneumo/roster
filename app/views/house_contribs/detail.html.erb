<% present(@house) do |house| %>
<div class='flex flex-col sm:flex-row items-center justify-center'>
  <div class='mb-5 mx-2'>
    <div class="flex flex-row justify-between">
      <h1 class="font-sans font-bold text-2xl"><%= house.addr(house) %></h1>
    </div>

    <div class="flex flex-row justify-between">
      <h1 class="font-sans font-bold text-2xl">Contribution Detail</h1>
    </div>

    <%= render "shared/table",
            head: 'detail_head',
            item_row:  'detail_row',
            collection: @contribs
    %>

    <hr class="mt-1 border-1 border-gray-700" />
    <br>

    <div class="flex flex-row justify-between">
      <%= render 'shared/new_edit/link_btn', label: 'House',
                                             path:   house_path(@house),
                                             color: 'gray' %>
      <%= render 'shared/new_edit/link_btn', label: 'New contribution',
                                             path:   new_contrib_for_house_path(@house),
                                             color: 'red' %>
    </div>
  </div>
</div>
<% end %>