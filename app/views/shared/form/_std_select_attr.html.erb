  <% info = mdl.element_info[elem] %>

  <div class="row-start-<%= info[:rstart] %> 
              col-start-<%= info[:start] %> 
              col-span-<%= info[:span] %>" > 
    <%= render 'shared/form/label', lblfor: info[:lblfor], lbltxt: info[:lbltxt] %>
    
    <%= mdl.form.select(  elem, info[:collection],
          { include_blank: info[:blank], 
            prompt: info[:prompt],
            selected: mdl.send(elem) || info[:default] },                        
          { class: "block leading-6 w-full mt-2 py-1.5 text-gray-900 rounded-md border-0 shadow ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-indigo-600",
            disabled: info[:disabled] }) 
    %>
  </div>