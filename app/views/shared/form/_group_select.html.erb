  <% info = mdl.element_info[elem] %>
  <% collection = info[:collection] %>
  
  
<div class="mx-4 mb-5 min-w-0">  
  <label  for=<%= info[:lblfor] %> class="form-field-label">
    <%= info[:lbltxt] %>
    <div data-controller="group" data-group-url="<%= houses_filter_path %>">
      <%= mdl.form.select( elem, collection,
            { include_blank: info[:blank], 
              prompt: info[:prompt],
              selected: mdl.send(elem) || info[:default] 
            },                        
            { class: "block mt-2 py-3 pl-3 text-gray-900 font-medium rounded-md border-0 shadow ring",
              data: {action: "select->filter#filterHouses"}
            } 
          ) 
      %>
    </div>
  </label>
</div>
