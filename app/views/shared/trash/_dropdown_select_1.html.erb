<div class="w-1/2 mx-2">
  <label for=<%= fldname %> >
    <%= select_label %>
  </label>

  <select id=<%= fldname %>
          class="block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 py-2 pl-3 pr-7 rounded shadow leading-tight focus:outline-none focus:shadow-outline">
      <% items.each do |item| %>
      <option><%= item %></option>
      <% end %>
  </select>

  <%= render 'shared/dropdown_arrow' %>
</div>